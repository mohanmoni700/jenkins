pipeline {
            environment {
                my_name = "Mohan"
            }
            agent none

                stages {
                    stage('first-stage'){
                         
                         steps {
                           
                            sh '''
                            echo "this is first stage"
                            sleep 5
                            '''                              
                        }
                    }

                    stage('second-stage'){

                        steps {
                            
                            sh '''
                            sleep 5
                            echo "second stage"
                            '''
                        }

                    }



                }










}