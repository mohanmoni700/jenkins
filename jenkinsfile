pipeline {
    agent any 
    stages {
        stage('STAGE-1') {
           when {
             branch 'main'
            }
   
            steps{
                sh '''
                echo "this is stage since we are in main branch"
                '''
            }
        }

        stage('STAGE-2'){
                when {
                        branch 'test'
                 }  
            steps{
                sh '''
                echo "this is stage2 we are in branch test"
                '''
            }    
        }
    }
}


